@using mvc_intermediate.Models;

@model UrunKategoriModel

@{
    ViewBag.Title = "Index";
}

<h2>Ürünler</h2>
<hr />
<div class="col-md-12">
    <div class="alert alert-success" role="alert">
        <strong>@Model.urunSayisi</strong> adet ürün listelendi.
    </div>
</div>

@section Kategori 
{
    @Html.Action("KategoriMenu", "Kategori")
}

@foreach (var urun in Model.Urunler)
{
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src="http://via.placeholder.com/640x360" class="img-thumbnail" alt="Urun Resmi">
            <div class="caption">
                <h3>@urun.UrunIsim</h3>
                <p>@urun.Aciklama</p>
                <p>
                    <a href="/Home/Details/?id=@urun.UrunId" class="btn btn-primary" role="button">Button</a>
                </p>

            </div>
        </div>
    </div>
}

